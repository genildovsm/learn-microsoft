@page
@using WebAppRazorPages.Models
@model IndexModel
@{
    ViewData["Title"] = "Página Principal";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo à Quitanda Online</h1>
    <p>Este é um catálogo de produtos criado através da geração automática de CRUD, baseada em modelo, presente no Visual Studio 2022.</p>
</div>

<div class="row">
    @foreach(Produto produto in Model.Produtos)
    {
        <div class="col-sm-3">
            <div class="card text-center bg-light mb-4">
                <img class="card-img-top" src="/img/produto/@string.Concat(produto.IdProduto.ToString("D6"),".jpg")" alt="Imagem de @produto.Nome" />
                <div class="card-header">
                    R$ @produto.Preco.ToString("F2")
                </div>
                <div class="card-body" style="height: 124px">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">@produto.Descricao</p>
                </div>
                <div class="card-footer">
                    <div>
                        <a href="#" class="btn btn-primary">Adicionar ao carrinho</a>
                    </div>
                    <small class="text-muted">Estoque: @produto.Estoque</small>
                </div>
            </div>
        </div>
    }
</div>
